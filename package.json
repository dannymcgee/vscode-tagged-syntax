{
	"name": "tagged-grammar",
	"description": "VSCode TextMate grammar for Tagged",
	"displayName": "vscode-tagged-grammar",
	"version": "1.2.0",
	"main": "index.js",
	"author": "Danny McGee <dannymcgee@gmail.com>",
	"publisher": "dannymcgee",
	"license": "MIT",
	"engines": {
		"vscode": "^1.22.0"
	},
	"repository": {
		"types": "git",
		"url": ""
	},
	"contributes": {
		"grammars": [
			{
				"scopeName": "source.tagged",
				"embeddedLanguages": {
					"meta.embedded.regexp.ts": "typescript",
					"meta.embedded.html": "html",
					"meta.embedded.template": "template",
					"meta.embedded.css": "css",
					"meta.embedded.scss": "scss",
					"meta.embedded.sass": "sass",
					"meta.embedded.glsl": "glsl",
					"meta.embedded.markdown": "markdown"
				},
				"path": "./dist/tagged.tmLanguage.json",
				"injectTo": [
					"source.js",
					"source.jsx",
					"source.ts",
					"source.tsx"
				]
			},
			{
				"scopeName": "source.tagged.regex.interpolation",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				},
				"path": "./dist/regex-interp.tmLanguage.json",
				"injectTo": [
					"source.js",
					"source.jsx",
					"source.ts",
					"source.tsx"
				]
			},
			{
				"scopeName": "source.tagged.re.interpolation",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				},
				"path": "./dist/re-interp.tmLanguage.json",
				"injectTo": [
					"source.js",
					"source.jsx",
					"source.ts",
					"source.tsx"
				]
			},
			{
				"scopeName": "source.tagged.html.interpolation",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				},
				"path": "./dist/html-interp.tmLanguage.json",
				"injectTo": [
					"source.js",
					"source.jsx",
					"source.ts",
					"source.tsx"
				]
			},
			{
				"scopeName": "source.tagged.template.interpolation",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				},
				"path": "./dist/template-interp.tmLanguage.json",
				"injectTo": [
					"source.js",
					"source.jsx",
					"source.ts",
					"source.tsx"
				]
			},
			{
				"scopeName": "source.tagged.css.interpolation",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				},
				"path": "./dist/css-interp.tmLanguage.json",
				"injectTo": [
					"source.js",
					"source.jsx",
					"source.ts",
					"source.tsx"
				]
			},
			{
				"scopeName": "source.tagged.scss.interpolation",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				},
				"path": "./dist/scss-interp.tmLanguage.json",
				"injectTo": [
					"source.js",
					"source.jsx",
					"source.ts",
					"source.tsx"
				]
			},
			{
				"scopeName": "source.tagged.sass.interpolation",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				},
				"path": "./dist/sass-interp.tmLanguage.json",
				"injectTo": [
					"source.js",
					"source.jsx",
					"source.ts",
					"source.tsx"
				]
			},
			{
				"scopeName": "source.tagged.glsl.interpolation",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				},
				"path": "./dist/glsl-interp.tmLanguage.json",
				"injectTo": [
					"source.js",
					"source.jsx",
					"source.ts",
					"source.tsx"
				]
			},
			{
				"scopeName": "source.tagged.markdown.interpolation",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				},
				"path": "./dist/markdown-interp.tmLanguage.json",
				"injectTo": [
					"source.js",
					"source.jsx",
					"source.ts",
					"source.tsx"
				]
			}
		]
	},
	"scripts": {
		"build": "ts-node scripts/build.ts",
		"package": "yarn build && vsce package",
		"install-package": "ts-node scripts/install.ts",
		"test-run": "yarn package && yarn install-package"
	},
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:typescript",
		"onLanguage:typescriptreact"
	],
	"devDependencies": {
		"@types/fs-extra": "^9.0.4",
		"@types/node": "^14.14.11",
		"chalk": "^4.1.1",
		"fs-extra": "^9.0.1",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.2",
		"vsce": "^1.81.1"
	}
}