{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": false,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"lib": ["es2017"]
	},
	"include": ["src/**/*.ts", "scripts/*.ts"],
	"exclude": ["node_modules"]
}
